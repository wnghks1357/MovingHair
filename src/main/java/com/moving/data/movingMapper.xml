<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="movingHair">

	
  <select id="idJungbokCheck" resultType="java.lang.Integer">
 	SELECT COUNT(*) FROM mh_user WHERE USER_ID = #{userId}
  </select>
  
  <select id="phoneJungbokCheck" resultType="java.lang.Integer">
 	SELECT COUNT(*) FROM mh_user WHERE USER_PHONE = #{userPhone}
  </select>
  
  <!-- TODO -->
  <select id="joinProc" resultType="userVo">
 	INSERT INTO mh_user VALUES(#{userID}, #{userPassword}, #{userType}, #{userName}, #{userPhone}, #{userEmail}, 'A', #{userZip}, #{userAddr1}, #{userAddr2}, #{userBirthday},'M', 'Y', 'Y', 'M', 'Y', 'Y',curdate(),curdate())
  </select>
 
</mapper>